# Mem0 + Tailscale deployment configuration
# Copy this file to mem0.env and update the secrets before running the deploy script.

# Required secrets
POSTGRES_PASSWORD=change-me
OPENAI_API_KEY=
MEM0_API_KEY=

# Optional overrides
POSTGRES_DB=mem0
POSTGRES_USER=mem0_user
POSTGRES_PORT=5432
MEM0_PORT=8888
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000
MEM0_DATA_ROOT=/opt/mem0

# Tailscale configuration
TAILNET_NAME=example-tailnet
TS_TAGS=tag:mem0
TS_SERVE_MEM0_DOMAIN=mem0
TS_SERVE_GRAFANA_DOMAIN=grafana
