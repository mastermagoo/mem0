# mem0 Production Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================
DEPLOYMENT_ENV=prd

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================

# PostgreSQL Configuration
POSTGRES_USER=mem0_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mem0_db
POSTGRES_PORT=5433

# Neo4j Configuration
NEO4J_AUTH=neo4j/your_secure_password_here
NEO4J_PLUGINS=["graph-data-science"]
NEO4J_BOLT_PORT=7688
NEO4J_HTTP_PORT=7475

# ============================================================================
# OLLAMA CONFIGURATION
# ============================================================================

# Ollama API URL (use host.docker.internal for Docker containers)
OLLAMA_URL=http://host.docker.internal:11434

# Default LLM model
DEFAULT_LLM_MODEL=llama2:13b

# ============================================================================
# mem0 SERVER CONFIGURATION
# ============================================================================

# API Port
MEM0_PORT=8888

# API Key for admin operations (generate a secure random string)
MEM0_ADMIN_API_KEY=your_admin_api_key_here

# ============================================================================
# TELEGRAM BOT (OPTIONAL)
# ============================================================================

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram Chat ID
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================

# Grafana Admin Credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_grafana_password_here

# Grafana Port
GRAFANA_PORT=3001

# ============================================================================
# MONITORING & ALERTING
# ============================================================================

# Enable/disable monitoring
MONITORING_ENABLED=true

# Prometheus scrape interval
PROMETHEUS_SCRAPE_INTERVAL=15s

# ============================================================================
# LOGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Docker network subnet (change if conflicts with existing networks)
DOCKER_NETWORK_SUBNET=192.168.97.0/24

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup directory (outside container)
BACKUP_DIR=/Volumes/Data/backups/mem0

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# ============================================================================
# SECURITY
# ============================================================================

# Enable/disable API authentication
API_AUTH_ENABLED=true

# JWT secret for API tokens (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# PostgreSQL shared buffers (adjust based on available RAM)
POSTGRES_SHARED_BUFFERS=256MB

# Neo4j heap size (adjust based on available RAM)
NEO4J_HEAP_INITIAL_SIZE=512m
NEO4J_HEAP_MAX_SIZE=2G

# mem0 worker threads
MEM0_WORKER_THREADS=4

# ============================================================================
# DEVELOPMENT/TESTING (set DEPLOYMENT_ENV accordingly)
# ============================================================================

# Enable debug mode (never use in production!)
DEBUG_MODE=false

# Enable SQL query logging (performance impact)
SQL_ECHO=false

# Enable Neo4j query logging
NEO4J_QUERY_LOG=false
